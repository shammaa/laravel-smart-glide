{
    "name": "shammaa/laravel-smart-glide",
    "description": "Advanced image processing toolkit for Laravel with unified /img routing, responsive components, and intelligent caching.",
    "type": "library",
    "keywords": [
        "laravel",
        "image-processing",
        "glide",
        "responsive-images",
        "image-optimization",
        "webp",
        "avif",
        "blade-components",
        "image-manipulation",
        "cdn",
        "cache",
        "seo"
    ],
    "license": "MIT",
    "version": "1.1.0",
    "homepage": "https://github.com/shammaa/laravel-smart-glide",
    "support": {
        "issues": "https://github.com/shammaa/laravel-smart-glide/issues",
        "source": "https://github.com/shammaa/laravel-smart-glide"
    },
    "authors": [
        {
            "name": "Shadi Shammaa",
            "email": "shadi.shammaa@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/filesystem": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0",
        "league/glide": "^3.0",
        "league/flysystem": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "illuminate/testing": "^11.0|^12.0",
        "orchestra/testbench": "^10.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "autoload": {
        "psr-4": {
            "Shammaa\\SmartGlide\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shammaa\\SmartGlide\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shammaa\\SmartGlide\\SmartGlideServiceProvider"
            ],
            "aliases": {
                "SmartGlide": "Shammaa\\SmartGlide\\Facades\\SmartGlide"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

