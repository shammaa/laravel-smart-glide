{
    "name": "appwriters/laravel-smart-glide",
    "description": "Advanced image processing toolkit for Laravel with unified /img routing, responsive components, and intelligent caching.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "AppWriters",
            "email": "team@appwriters.dev"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/filesystem": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "illuminate/view": "^10.0|^11.0|^12.0",
        "league/glide": "^3.0",
        "league/flysystem": "^3.0"
    },
    "require-dev": {
        "illuminate/testing": "^10.0|^11.0|^12.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AppWriters\\SmartGlide\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppWriters\\SmartGlide\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AppWriters\\SmartGlide\\SmartGlideServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

